<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        app:cardCornerRadius="24dp">

    <LinearLayout
            android:layout_margin="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/druk"
                android:text="№ 1"
                android:textColor="#000"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/tvDetailsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monbold"
                android:text="Установка футбольных ворот на придворовой территории"
                android:textColor="#000"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/tvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/monreg"
                android:text="Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit."
                android:textColor="#000"
                android:textSize="14sp" />

        <Button
                android:id="@+id/btnVoteYes"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Голосовать ЗА"
                android:fontFamily="@font/monreg"
                android:textAlignment="textStart"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:drawablePadding="110dp"
                android:background="@drawable/bg_btn_vote_normal"/>

        <Button
                android:id="@+id/btnVoteRefrain"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Воздержаться"
                android:fontFamily="@font/monreg"
                android:textAlignment="textStart"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:drawablePadding="110dp"
                android:background="@drawable/bg_btn_vote_normal"/>

        <Button
                android:id="@+id/btnVoteNo"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Голосовать ПРОТИВ"
                android:fontFamily="@font/monreg"
                android:textAlignment="textStart"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:drawablePadding="110dp"
                android:background="@drawable/bg_btn_vote_normal"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>