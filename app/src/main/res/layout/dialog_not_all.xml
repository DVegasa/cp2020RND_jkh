<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="#fff"
            app:cardCornerRadius="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:orientation="vertical">

            <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monbold"
                    android:text="Вы ответили не на все вопросы"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/monreg"
                    android:text="Вопросы, на которые Вы не ответили, получат отметку ВОЗДЕРЖИВАЮСЬ от Вашего имени.\n\nХотите отправить свои результаты в текущем виде или вернуться и проголосовать за оставшиеся вопросы?"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="14sp" />


            <Button
                    android:id="@+id/btnSendAsIs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_btn_vote_confirm"
                    android:fontFamily="@font/monbold"
                    android:text="Отправить как есть"
                    android:textAllCaps="false"
                    android:textColor="#fff" />

            <Button
                    android:id="@+id/btnBackAndAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_main_button"
                    android:fontFamily="@font/monbold"
                    android:text="Вернуться и исправить"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:layout_marginBottom="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>